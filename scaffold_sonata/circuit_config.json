        "$BASE_DIR": "./",
        "$NETWORK_DIR": "$BASE_DIR/networks",
        "$COMPONENT_DIR": "$BASE_DIR/components"
    },
    "components": {
        "synaptic_models_dir": "$COMPONENT_DIR/synapse_dynamics",
        "point_neuron_models_dir": "$COMPONENT_DIR/cell_dynamics"
    },
    "networks": {
        "nodes": [
            {
                "nodes_file":       "$NETWORK_DIR/scaffold_nodes.h5",
                "node_types_file":  "$NETWORK_DIR/scaffold_node_types.csv"
            },
	    {
		"nodes_file":       "$NETWORK_DIR/external_gloms_nodes.h5",
		"node_types_file":  "$NETWORK_DIR/external_gloms_node_types.csv"
	    }
        ],
        "edges":[
            {
                "edges_file":       "$NETWORK_DIR/scaffold_scaffold_edges.h5",
                "edge_types_file":  "$NETWORK_DIR/scaffold_scaffold_edge_types.csv"
            },
	    {
		"edges_file":        "$NETWORK_DIR/external_scaffold_edges.h5",
		"edge_types_file":   "$NETWORK_DIR/external_scaffold_edge_types.csv"
	    }
        ]
    }
}

